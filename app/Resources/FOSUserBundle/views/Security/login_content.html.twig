{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<body style="background-color: #edf1f7;background-image: url('brushed_@2X.png'); ">
<div style="
     margin:auto;
     margin-top: 30px;
     width: 35%; 
     border: 2px solid #9096a0;
     padding: 40px;
     background-color:#dcdee2;
     background-image: url('cork-wallet.png');">

<form action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}
    <div class="form-group" >
    <label  for="username">{{ 'nazwa użytkownika'|trans }}</label>
    <input  type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
    </div>
    <div class="form-group"  >
    <label  for="password">{{ 'hasło'|trans }}</label>
    <input  type="password" id="password" name="_password" required="required" />
    </div>
     <div class="form-check" >
    <input  type="checkbox" id="remember_me" name="_remember_me" value="on" />
    <label  for="remember_me">{{ 'zapamiętaj ustawienia'|trans }}</label>
    </div>
    <input  type="submit" class="btn btn-primary" id="_submit" name="_submit" value="{{ 'wyślij'|trans }}" />
</form>
    </div>
</body>